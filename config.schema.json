{
  "pluginAlias": "Homebridge OpenSprinkler",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Homebridge OpenSprinkler"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": "Password"
      },
      "host": {
        "title": "Host",
        "type": "string",
        "required": true,
        "default": "localhost"
      },
      "pollInterval": {
        "title": "Poll Interval",
        "type": "number",
        "default": 15
      },
      "valves": {
        "title": "Valves",
        "type": "array",
        "items": {
          "title": "Valve Info",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name (Must end with a number or letter)",
              "type": "string"
            },
            "defaultDuration": {
              "title": "Default Duration (In Seconds)",
              "type": "number"
            }
          }
        },
        "required": true
      }
    }
  }
}
