{
  "pluginAlias": "HomebridgeOpenSprinklerApi",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "password": {
        "title": "Password",
        "type": "object",
        "required": true,
        "description": "Define a md5 version of your password or use plain text. One is required.",
        "properties": {
          "md5": {
            "title": "md5",
            "type": "string"
          },
          "plain": {
            "title": "Plain text",
            "type": "string"
          }
        }
      },
      "host": {
        "title": "Host",
        "type": "string",
        "required": true,
        "default": "localhost",
        "description": "The host for your system. Most likely an IP address. Don't include http://"
      },
      "pollInterval": {
        "title": "Poll Interval",
        "type": "number",
        "default": 15,
        "description": "How often to poll for updates"
      },
      "valves": {
        "title": "Valves",
        "type": "array",
        "items": {
          "title": "Valve Info",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name (Must end with a number or letter)",
              "type": "string",
              "required": true
            },
            "defaultDuration": {
              "title": "Default Duration (In Seconds)",
              "type": "number",
              "required": true
            }
          }
        },
        "required": true,
        "description": "Define these valves in the order they show up in OpenSprinkler"
      }
    }
  }
}
